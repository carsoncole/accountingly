<%= form_with model: [@entity, @transaction] do |t| %>
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">
      <%= @transaction.new_record? ? "New Transaction" : "Edit Transaction" %>
    </h1>
    <%= button_tag @transaction.new_record? ? 'Create transaction' : 'Update transaction', 
        type: :submit, 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>

  <%= render "shared/error_messages", target: @transaction %>

  <!-- Transaction Details -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Transaction Details</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= t.label :date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= t.date_select :date, 
            { order: [:month, :day, :year], start_year: Date.current.year - 10, end_year: Date.current.year + 1 },
            { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
      </div>
      
      <div>
        <%= t.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= t.text_field :description, 
            size: 75, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <hr class="border-gray-200">

  <!-- Entries -->
  <div class="bg-white shadow-sm rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Entries</h3>
    
    <%= t.fields_for :entries do |e| %>
      <div class="space-y-4 p-4 border border-gray-200 rounded-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= e.label :account_id, "Account", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= e.collection_select :account_id, 
                @entity.accounts.order("name ASC"), 
                :id, 
                :name, 
                { prompt: "Select an account" },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>
          
          <div>
            <%= e.label :amount, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= e.text_field :amount, 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "0.00" %>
          </div>
        </div>
        
        <div>
          <%= e.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= e.text_field :description, 
              size: 75, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        
        <div>
          <% if false#!e.object.new_record? %>
            <%= e.text_field :attachment_file_name, 
                { size: 100, disabled: true },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-50 sm:text-sm" } %>
            <% if e.object.attachment.exists? %>
              <div class="mt-2">
                <%= image_tag e.object.attachment.url(:medium), class: "h-24 w-24 object-cover rounded border" %>
              </div>
            <% end %>
          <% else %>
            <%= e.label :attachment, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= e.file_field :attachment, 
                class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end">
    <%= button_tag @transaction.new_record? ? 'Create transaction' : 'Update transaction', 
        type: :submit, 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 
