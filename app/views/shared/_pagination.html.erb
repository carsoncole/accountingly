<%# Pagination navigation for admin resources %>
<div class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 sm:px-6">
  <div class="flex flex-1 justify-between sm:hidden">
    <% if pagy.prev %>
      <%= link_to "Previous", url_for(params.permit(:sort, :direction, :status).merge(page: pagy.prev)), class: "relative inline-flex items-center rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600" %>
    <% end %>
    <% if pagy.next %>
      <%= link_to "Next", url_for(params.permit(:sort, :direction, :status).merge(page: pagy.next)), class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600" %>
    <% end %>
  </div>
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between gap-4">
    <div class="flex items-center">
      <p class="text-sm text-gray-700 dark:text-gray-300">
        Showing <span class="font-medium"><%= pagy.from %></span> to <span class="font-medium"><%= pagy.to %></span> of <span class="font-medium"><%= pagy.count %></span> results
      </p>
    </div>
    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        <% if pagy.prev %>
          <%= link_to url_for(params.permit(:sort, :direction, :status).merge(page: pagy.prev)), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 dark:text-gray-500 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0" do %>
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
        
        <% pagy.series.each do |item| %>
          <% if item.is_a?(Integer) %>
            <%= link_to item, url_for(params.permit(:sort, :direction, :status).merge(page: item)), class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold #{item == pagy.page ? 'z-10 bg-blue-600 text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600' : 'text-gray-900 dark:text-gray-300 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0'}" %>
          <% elsif item.is_a?(String) %>
            <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 dark:text-gray-300 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 focus:outline-offset-0"><%= item %></span>
          <% end %>
        <% end %>

        <% if pagy.next %>
          <%= link_to url_for(params.permit(:sort, :direction, :status).merge(page: pagy.next)), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 dark:text-gray-500 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0" do %>
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
      </nav>
    </div>
  </div>
</div> 