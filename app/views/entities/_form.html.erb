<%= form_for(@entity, html: { class: "space-y-6" }) do |f| %>
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">
      <%= @entity.new_record? ? "New Entity" : "Edit Entity" %>
    </h1>
    </div>

  <%= render "shared/error_messages", target: @entity %>

  <div class="bg-white shadow-sm rounded-lg p-6">
    <div class="max-w-md">
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "Enter entity name" %>
        <p class="mt-1 text-sm text-gray-500">Enter a name for this entity (2-35 characters)</p>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancel", entities_path, class: "mr-3 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= button_tag @entity.new_record? ? 'Create Entity' : 'Update Entity', 
        type: :submit, 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 