<% content_for :title, "#{@entity.name} - Income Statement" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">
      <%= @entity.name %> - Income Statement
    </h1>
    <%= link_to "Back to Statements", entity_statements_path(@entity), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
  </div>

  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              For the period
            </th>
            <% @income_statements.each do |s| %>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= format_date_short(s.from_date) %>
                <br>
                to
                <br>
                <%= format_date_short(s.to_date) %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <!-- Income Section -->
          <tr class="bg-blue-50">
            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">
              <h2 class="text-lg font-bold text-blue-900">Income</h2>
            </th>
            <% @income_statements.each do |s| %>
              <td class="px-6 py-4"></td>
            <% end %>
          </tr>
          
          <% @income_accounts.each do |account, value| %>
            <tr class="hover:bg-gray-50">
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                <%= link_to truncate(account.name, length: 37), entity_account_entries_path(@entity, account.id), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
              </th>
              <% @income_statements.each do |s| %>
                <td class="px-6 py-4 text-right text-sm text-gray-900">
                  <%= number_with_precision(s.account_balances[account], delimiter: ",", precision: 2) %>
                </td>
              <% end %>
            </tr>
          <% end %>
          
          <!-- Spacer -->
          <tr>
            <td class="px-6 py-2">&nbsp;</td>
            <% @income_statements.each do |s| %>
              <td class="px-6 py-2"></td>
            <% end %>
          </tr>
          
          <!-- Expense Section -->
          <tr class="bg-red-50">
            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">
              <h2 class="text-lg font-bold text-red-900">Expense</h2>
            </th>
            <% @income_statements.each do |s| %>
              <td class="px-6 py-4"></td>
            <% end %>
          </tr>
          
          <% @expense_accounts.each do |account, value| %>
            <tr class="hover:bg-gray-50">
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-900">
                <%= link_to truncate(account.name, length: 37), entity_account_entries_path(@entity, account.id), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
              </th>
              <% @income_statements.each do |s| %>
                <td class="px-6 py-4 text-right text-sm text-gray-900">
                  <%= number_with_precision(s.account_balances[account], delimiter: ",", precision: 2) %>
                </td>
              <% end %>
            </tr>
          <% end %>
          
          <!-- Spacer -->
          <tr>
            <td class="px-6 py-2">&nbsp;</td>
            <% @income_statements.each do |s| %>
              <td class="px-6 py-2"></td>
            <% end %>
          </tr>
          
          <!-- Net Income Section -->
          <tr class="bg-green-50 border-t-2 border-green-200">
            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">
              <span class="text-lg font-bold text-green-900">Net Income</span>
            </th>
            <% @income_statements.each do |s| %>
              <td class="px-6 py-4 text-right text-sm font-bold text-green-900">
                <%= number_to_currency(s.net_income) %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div> 