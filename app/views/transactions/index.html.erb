<% content_for :title, "Transactions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900/20 mb-5 text-green-500 dark:text-green-400 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-white">Transactions</h1>
    <%= link_to "New transaction", new_entity_transaction_path(entity_id: @entity.id), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium transition-colors" %> 
  </div>

  <% if @transactions.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-800">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Date
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Description
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Total Amount
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Entries
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
          <% @transactions.each do |transaction| %>
            <tr id="<%= dom_id transaction %>" class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                <%= transaction.date.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">
                <div class="max-w-xs truncate" title="<%= transaction.description %>">
                  <%= transaction.description %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <% primary_amount = transaction.primary_entry_amount %>
                <span class="<%= primary_amount >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %> font-medium">
                  <%= number_to_currency(primary_amount) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= transaction.entries_count %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex space-x-2">
                  <button onclick="toggleEntries('<%= dom_id transaction %>')" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>
                  <%= link_to "View", entity_transaction_path(entity_id: @entity.id, id: transaction.id), class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300 transition-colors" %>
                  <%= link_to "Edit", edit_entity_transaction_path(entity_id: @entity.id, id: transaction.id), class: "text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" %>
                  <%= button_to "Delete", entity_transaction_path(entity_id: @entity.id, id: transaction.id), method: :delete, class: "text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300 bg-transparent border-none cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
            
            <!-- Expandable entries row -->
            <tr id="entries-<%= dom_id transaction %>" class="hidden bg-gray-50 dark:bg-gray-800">
              <td colspan="5" class="px-6 py-3">
                <div class="space-y-2">
                  <h4 class="text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Transaction Entries:</h4>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                    <% transaction.entries.includes(:account).each do |entry| %>
                      <div class="flex justify-between items-center p-2 bg-white dark:bg-gray-700 rounded border border-gray-200 dark:border-gray-600 text-xs">
                        <span class="font-medium text-gray-700 dark:text-gray-200 truncate" title="<%= entry.account.name %>">
                          <%= entry.account.name %>
                        </span>
                        <span class="<%= entry.amount >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %> font-medium ml-2">
                          <%= number_to_currency(entry.amount) %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6">
      <%= render 'shared/pagination', pagy: @pagy %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500">
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No transactions</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new transaction.</p>
      <div class="mt-6">
        <%= link_to "New transaction", new_entity_transaction_path(entity_id: @entity.id), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>

<script>
function toggleEntries(transactionId) {
  const entriesRow = document.getElementById('entries-' + transactionId);
  const button = event.currentTarget;
  const icon = button.querySelector('svg');
  
  if (entriesRow.classList.contains('hidden')) {
    entriesRow.classList.remove('hidden');
    icon.style.transform = 'rotate(180deg)';
  } else {
    entriesRow.classList.add('hidden');
    icon.style.transform = 'rotate(0deg)';
  }
}
</script>
